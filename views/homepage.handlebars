{{#each posts as |post| }}
<div class="card">
  <div class="card-header">
    {{post.name}}'s Blog Post
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.body}}</p>
      <footer class="blockquote-footer">{{post.updatedAt}}</footer>
    </blockquote>
  </div>
</div>
{{/each}}
{{#each posts as |post| }}
<div class="card">
  <div class="card-header">
    {{post.blog.title}} Post
    <a class="nav-link" href="/{{id}}">View</a>
    created by: {{post.name}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.blog.body}}</p>
      <footer class="blockquote-footer">{{post.blog.updatedAt}}</footer>
    </blockquote>
  </div>
</div>
{{/each}}